---
interface Props {
    title: string,
    price: number,
    variant?: string,
    season: boolean
}

const {title, variant = "", price, season} = Astro.props;
---

<figure>
    <img
      class="w-full rounded-3xl shadow-2xl"
      src="https://images.unsplash.com/photo-1528697203043-733dafdaa316?q=80&w=2312&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
      alt=""
      width="1310"
      height="873"
    />
    <div class="mt-4 flex justify-between px-6">
      <div>
        <h3 class="text-sm">
          <a href="#">
            <span aria-hidden="true" class="absolute inset-0"></span>
            {variant} {season === true ? "(Seasonal Item)" : ""}
          </a>
        </h3>
        <p class="mt-1 text-lg font-medium leading-6 text-white gold:text-dyed-black sand:text-dyed-black">{title}</p>
      </div>
      <p class="text-base text-tomato-500 red:text-tomato-100 orange:text-tomato-900 blue:text-tomato-900 purple:text-tomato-100">${price}</p>
    </div>
</figure>