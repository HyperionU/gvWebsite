---
import { drinks, milkshakes, lattes, bagels, addOn, flavourShots } from "../../lib/content";
import type { Item } from "../../lib/contentTypes";
import ProductSet from "./ProductSet.astro";

const menu: Item[] = [];
drinks.forEach((item) => menu.push(item))
milkshakes.forEach(element => menu.push(element));
lattes.forEach((item) => menu.push(item))
bagels.forEach(element => menu.push(element));
addOn.forEach(element => menu.push(element));
flavourShots.forEach((element) => menu.push(element))
---

<main  >
  <ProductSet menuSet={drinks} title="Drinks" />  
  <ProductSet menuSet={milkshakes} title="Milkshakes" />
  <ProductSet menuSet={lattes} title="Lattes" />  
  <ProductSet menuSet={bagels} title="Bagels" />
  <ProductSet menuSet={addOn} title="Add-Ons" />  
  <ProductSet menuSet={flavourShots} title="Flavour Shots" />
</main>
