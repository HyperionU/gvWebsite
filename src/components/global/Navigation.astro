---
import Coffee from "../icons/Coffee.astro";
import GitHub from "../icons/GitHub.astro";
import CodePen from "../icons/CodePen.astro";
import { ModeToggle } from "../ModeToggle";
---

<nav class="flex w-full border-b-2 text-negroni-500 gold:text-negroni-900 red:text-negroni-50 orange:text-dyed-black blue:text-dyed-black purple:text-negroni-50 sand:text-dyed-black yellow:text-dyed-black silver:text-dyed-black divide-x font-medium">
    <div class="flex items-center justify-start p-8 gap-4 text-3xl basis-1/3">
        <a href="/" aria-label="Global Village - Home" class="hover:text-tomato-500 transition-colors">
            <Coffee />
        </a>
    </div>
    <div class="flex items-center justify-center p-8 gap-12 text-3xl basis-1/3">
        Global Village Cafe
    </div>
    <div class="flex items-center justify-center p-8 gap-12 grow">
        <a href="https://github.com/HyperionU" target="_blank" aria-label="HyperionU - Github">
            <GitHub />
        </a>
        <a href="https://codepen.io/korvid" target="_blank" aria-label="HyperionU - Codepen">
            <CodePen />
        </a>
    </div>
    <div class="flex items-center justify-start p-8 gap-4 grow">
        <ModeToggle client:load /> 
    </div>
</nav>